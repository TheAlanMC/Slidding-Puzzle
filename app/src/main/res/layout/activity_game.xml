<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/fondo"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Button
                android:id="@+id/btincio"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Iniciar"
                android:background="@drawable/titulo"/>

            <Button
                android:id="@+id/btsolver"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Resolver"
                android:background="@drawable/titulo"/>
        </LinearLayout>
            <ImageView
                android:id="@+id/ivmodo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                android:background="@drawable/piezas_detalle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Movimientos:"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/tvmoves"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_margin="15dp"
                android:textSize="30dp"
                android:background="@drawable/input"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tiempo"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_margin="15dp"
                />

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00:00"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_margin="15dp"
                android:textSize="30dp"
                android:background="@drawable/input"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@drawable/piezas_detalle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#F44336"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#9C27B0"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#3F51B5"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#03A9F4"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#8BC34A"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#FFEB3B"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#FF9800"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#964B00"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="30dp"

                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btatras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:background="@drawable/titulo"
            android:text="ATRAS"
            />
    </LinearLayout>
</RelativeLayout>