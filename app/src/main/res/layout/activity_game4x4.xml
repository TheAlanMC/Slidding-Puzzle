<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityGame4x4"
    android:orientation="horizontal"
    android:background="@drawable/fondo"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btincio"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Iniciar"
                    android:background="@drawable/titulo"/>

                <Button
                    android:id="@+id/btsolver"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Resolver"
                    android:background="@drawable/titulo"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivmodo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/patron4x4"
                android:background="@drawable/piezas_detalle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Movimientos:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvmoves"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="30dp"
                android:background="@drawable/input"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Tiempo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="00:00:00"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="30dp"
                android:background="@drawable/input"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@drawable/piezas_detalle"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tva1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#CFA240"
                    android:textSize="30dp"
                    />

                <TextView
                    android:id="@+id/tva2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#CFA240"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tva3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tva5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#CFA240"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tva7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#CFA240"
                    android:textSize="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tva9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva10"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#CFA240"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tva11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tva13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D00016"
                    android:gravity="center"
                    android:text="14"
                    android:textColor="#CFA240"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tva15"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#D0D4D6"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="#CFA240"
                    android:textSize="30dp"

                    />

                <TextView
                    android:id="@+id/tva16"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btatras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:background="@drawable/titulo"
            android:text="ATRAS" />
    </LinearLayout>
</RelativeLayout>